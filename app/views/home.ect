<% extend '../views/shared/layout' %>

<div class="row" >
<div class="new-products">
    <div class="container">
      <h3>New Products</h3>
      <div class="agileinfo_new_products_grids">
        <% for item in @merchandise : %>
        <div class="col-md-3 agileinfo_new_products_grid">
          <div class="agile_ecommerce_tab_left agileinfo_new_products_grid1">
            <div class="hs-wrapper hs-wrapper1">
              <% if item.image : %>
                <img src="./uploads/<%= item.image %>" alt=" " class="img-responsive" />
              <% else : %>
                <img src="./images/no-image.png" alt=" " class="img-responsive" />
              <% end %>
              <div class="w3_hs_bottom w3_hs_bottom_sub">
                <ul>
                  <li>
                    <a href="#" data-toggle="modal" data-target="#myModal6"><span class="glyphicon glyphicon-eye-open" aria-hidden="true"></span></a>
                  </li>
                </ul>
              </div>
            </div>
            <h5><a href="<%= @url %>/merchandise/<%= item.id %>"><%= item.name %></a></h5>
            <div class="simpleCart_shelfItem">
              <% if item.discount : %>
                <p><span>$<%= item.price %></span> <i class="item_price">$<%= item.discount %></i></p>
                <p><a class="item_add" href="#">Add to cart</a></p>
              <% else : %>
                <p><i class="item_price">$<%= item.price %></i></p>
                <p><a class="item_add" href="#" id="<%= item.id %>">Add to cart</a></p>
              <% end %>
            </div>
          </div>
        </div>
        <% end %>
        <div class="clearfix"> </div>
      </div>
    </div>
  </div>
  <% if @bargain : %>
<div class="new-products">
    <div class="container">
      <h3>Discount</h3>
      <div class="agileinfo_new_products_grids">
        <% for bargain in @bargains : %>
        <div class="col-md-3 agileinfo_new_products_grid">
          <div class="agile_ecommerce_tab_left agileinfo_new_products_grid1">
            <div class="hs-wrapper hs-wrapper1">
              <% if bargain.image : %>
                <img src="./uploads/<%= bargain.image %>" alt=" " class="img-responsive" />
              <% else : %>
                <img src="./images/no-image.png" alt=" " class="img-responsive" />
              <% end %>
              <div class="w3_hs_bottom w3_hs_bottom_sub">
                <ul>
                  <li>
                    <a href="#" data-toggle="modal" data-target="#myModal6"><span class="glyphicon glyphicon-eye-open" aria-hidden="true"></span></a>
                  </li>
                </ul>
              </div>
            </div>
            <h5><a href="single.html"><%= bargain.name %></a></h5>
            <div class="simpleCart_shelfItem">
              <% if item.discount : %>
                <p><span>$<%= bargain.price %></span> <i class="item_price">$<%= bargain.discount %></i></p>
                <p><a class="item_add" href="#">Add to cart</a></p>
              <% else : %>
                <p><i class="item_price">$<%= bargain.price %></i></p>
                <p><a class="item_add" href="#">Add to cart</a></p>
              <% end %>
            </div>
          </div>
        </div>
        <% end %>
        <div class="clearfix"> </div>
      </div>
    </div>
  </div>
  <% end %>
</div>
